    <Attribute name="FlyStartPos"               type="EPICS_PV"     source="20idhedmA:PSOFly1:startPos"            dbrtype="DBR_NATIVE"/>
    <Attribute name="FlyEndPos"                 type="EPICS_PV"     source="20idhedmA:PSOFly1:endPos"              dbrtype="DBR_NATIVE"/>
    <Attribute name="FlySlewSpeed"              type="EPICS_PV"     source="20idhedmA:PSOFly1:slewSpeed"           dbrtype="DBR_NATIVE"/>
    <Attribute name="FlyScanDelta"              type="EPICS_PV"     source="20idhedmA:PSOFly1:scanDelta"           dbrtype="DBR_NATIVE"/>
