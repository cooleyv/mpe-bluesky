    <Attribute name="Aero"                      type="EPICS_PV"     source="20idhedmA:m1.RBV"                      dbrtype="DBR_NATIVE"    description="main rotation stage readback."/>
    <Attribute name="AeroX"                     type="EPICS_PV"     source="20idhedm:m37.RBV"                       dbrtype="DBR_NATIVE"/>
