<!-- Attributes -->  
<Attributes
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://epics.aps.anl.gov/areaDetector/attributes ../attributes.xsd">

    <!--  Detector information  -->
    <Attribute name="DetectorManufacturer"      type="EPICS_PV"     source="20idsimAD:cam1:Manufacturer_RBV"           dbrtype="DBR_STRING"/>
    <Attribute name="DetectorModel"             type="EPICS_PV"     source="20idsimAD:cam1:Model_RBV"                  dbrtype="DBR_STRING"/>
    <Attribute name="SerialNumber"              type="EPICS_PV"     source="20idsimAD:cam1:SerialNumber_RBV"           dbrtype="DBR_STRING"/>
    <Attribute name="FirmwareVersion"           type="EPICS_PV"     source="20idsimAD:cam1:FirmwareVersion_RBV"        dbrtype="DBR_STRING"/>
    <Attribute name="SDKVersion"                type="EPICS_PV"     source="20idsimAD:cam1:SDKVersion_RBV"             dbrtype="DBR_STRING"/>
    <Attribute name="DriverVersion"             type="EPICS_PV"     source="20idsimAD:cam1:DriverVersion_RBV"          dbrtype="DBR_STRING"/>
    <Attribute name="ADCoreVersion"             type="EPICS_PV"     source="20idsimAD:cam1:ADCoreVersion_RBV"          dbrtype="DBR_STRING"/>

    <Attribute name="MaxSizeX"                  type="EPICS_PV"     source="20idsimAD:cam1:MaxSizeX_RBV"               dbrtype="DBR_NATIVE"/>
    <Attribute name="MaxSizeY"                  type="EPICS_PV"     source="20idsimAD:cam1:MaxSizeY_RBV"               dbrtype="DBR_NATIVE"/>
    <Attribute name="MinX"                      type="EPICS_PV"     source="20idsimAD:cam1:MinX"                       dbrtype="DBR_NATIVE"/>
    <Attribute name="MinY"                      type="EPICS_PV"     source="20idsimAD:cam1:MinY"                       dbrtype="DBR_NATIVE"/>
    <Attribute name="SizeX"                     type="EPICS_PV"     source="20idsimAD:cam1:SizeX"                      dbrtype="DBR_NATIVE"/>
    <Attribute name="SizeY"                     type="EPICS_PV"     source="20idsimAD:cam1:SizeY"                      dbrtype="DBR_NATIVE"/>
    <Attribute name="BinX"                      type="EPICS_PV"     source="20idsimAD:cam1:BinX"                       dbrtype="DBR_NATIVE"/>
    <Attribute name="BinY"                      type="EPICS_PV"     source="20idsimAD:cam1:BinY"                       dbrtype="DBR_NATIVE"/>
    
    <Attribute name="AcqTime"                   type="EPICS_PV"     source="20idsimAD:cam1:AcquireTime_RBV"            dbrtype="DBR_NATIVE"/>
    <Attribute name="AcqPeriod"                 type="EPICS_PV"     source="20idsimAD:cam1:AcquirePeriod_RBV"          dbrtype="DBR_NATIVE"/>
    <Attribute name="Gain"                      type="EPICS_PV"     source="20idsimAD:cam1:Gain_RBV"                   dbrtype="DBR_NATIVE"/>
    <Attribute name="DataType"                  type="EPICS_PV"     source="20idsimAD:cam1:DataType_RBV"               dbrtype="DBR_STRING"/>
    <Attribute name="ArrayCounter"              type="EPICS_PV"     source="20idssimAD:cam1:ArrayCounter_RBV"           dbrtype="DBR_NATIVE"/>
    <Attribute name="Temperature"               type="EPICS_PV"     source="20idsimAD:cam1:Temperature_RBV"            dbrtype="DBR_NATIVE"/>
    <!--  following line is critical to direct frame(s) to pre-defined destination  -->
    <Attribute name="SaveDest"                  type="EPICS_PV"     source="20idsimAD:cam1:FrameType"                  dbrtype="DBR_STRING"/>
    <Attribute name="SampleName"                type="EPICS_PV"     source="20idsimAD:HDF1:FileName"                   dbrtype="DBR_STRING"/>
    <Attribute name="FullFileName"              type="EPICS_PV"     source="20idsimAD:HDF1:FullFileName_RBV"           dbrtype="DBR_STRING"/>
    <Attribute name="FilePath"                  type="EPICS_PV"     source="20idsimAD:HDF1:FilePath_RBV"               dbrtype="DBR_STRING"/>
    <Attribute name="HDFPlugInVersion"          type="EPICS_PV"     source="20idsimAD:HDF1:PluginType_RBV"             dbrtype="DBR_STRING"/>

    <!--  Storage Ring information  -->
    <Attribute name="DateTimeStart"             type="EPICS_PV"     source="S:IOC:timeOfDayForm1SI"                dbrtype="DBR_STRING"    description="date and time at start"/>
    <Attribute name="DateTimeEnd"               type="EPICS_PV"     source="S:IOC:timeOfDayForm1SI"                dbrtype="DBR_STRING"    description="date and time at end"/>
    <Attribute name="Current"                   type="EPICS_PV"     source="S:SRcurrentAI"                         dbrtype="DBR_NATIVE"    description="ring Current (mA)"/>
    <Attribute name="TopUpStatus"               type="EPICS_PV"     source="S:TopUpStatus"                         dbrtype="DBR_STRING"    description="Top-UP Status"/>
    <Attribute name="RingOperator"              type="EPICS_PV"     source="OPS:message1"                          dbrtype="DBR_STRING"    description="storage ring operator in charge"/>
    <Attribute name="FillPattern"               type="EPICS_PV"     source="OPS:message3"                          dbrtype="DBR_STRING"    description="storage ring fill pattern"/>
    <Attribute name="NextFillInfo"              type="EPICS_PV"     source="OPS:message6"                          dbrtype="DBR_STRING"    description="next fill info"/>

    <!--  Beamline/BCS Inforation  -->
    <Attribute name="SCUCurrent"                type="EPICS_PV"     source="S20ID:DSID:GapM.VAL"                dbrtype="DBR_DOUBLE"/>

    <Attribute name="WBSlitsHSize"              type="EPICS_PV"     source="20idhedm:m8.RBV"                       dbrtype="DBR_NATIVE"/>
    <Attribute name="WBSlitsVSize"              type="EPICS_PV"     source="20idhedm:m8.RBV"                       dbrtype="DBR_NATIVE"/>
    <Attribute name="WBSlitsHCenter"            type="EPICS_PV"     source="20idhedm:m8.RBV"                       dbrtype="DBR_NATIVE"/>
    <Attribute name="WBSlitsVCenter"            type="EPICS_PV"     source="20idhedm:m8.RBV"                       dbrtype="DBR_NATIVE"/>

    <Attribute name="USSlitsHSize"              type="EPICS_PV"     source="20idhedm:m8.RBV"                    dbrtype="DBR_NATIVE"/>
    <Attribute name="USSlitsVSize"              type="EPICS_PV"     source="20idhedm:m8.RBV"                    dbrtype="DBR_NATIVE"/>
    <Attribute name="USSlitsHCenter"            type="EPICS_PV"     source="20idhedm:m8.RBV"                    dbrtype="DBR_NATIVE"/>
    <Attribute name="USSlitsVCenter"            type="EPICS_PV"     source="20idhedm:m8.RBV"                    dbrtype="DBR_NATIVE"/>

    <Attribute name="DSSlitsHSize"              type="EPICS_PV"     source="20idhedm:m8.RBV"                    dbrtype="DBR_NATIVE"/>
    <Attribute name="DSSlitsVSize"              type="EPICS_PV"     source="20idhedm:m8.RBV"                    dbrtype="DBR_NATIVE"/>
    <Attribute name="DSSlitsHCenter"            type="EPICS_PV"     source="20idhedm:m8.RBV"                    dbrtype="DBR_NATIVE"/>
    <Attribute name="DSSlitsVCenter"            type="EPICS_PV"     source="20idhedm:m8.RBV"                    dbrtype="DBR_NATIVE"/>
